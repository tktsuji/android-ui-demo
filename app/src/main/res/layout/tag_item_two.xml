<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@dimen/tag_marginTop"
        android:background="@drawable/tag_background">

        <TextView
            android:id="@+id/tagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tag_padding"
            android:paddingRight="@dimen/tag_paddingRight"
            android:layout_marginLeft="@dimen/tag_marginLeft"
            android:layout_marginTop="@dimen/tag_marginTop"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/tagButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_clear"
            android:layout_toEndOf="@id/tagText"
            android:layout_toRightOf="@id/tagText"
            android:layout_centerVertical="true"
            android:padding="@dimen/tag_padding"/>

    </RelativeLayout>
</RelativeLayout>