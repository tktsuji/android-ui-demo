<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_an_account"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="edu.ucsb.cs.cs185.group.a185.CreateAnAccountActivity">

    <EditText
        android:id="@+id/umailText"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/createAccount_text"
        android:hint="@string/createAccount_umail"/>

    <EditText
        android:id="@+id/passwordText"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_editTextHeight"
        android:hint="@string/createAccount_password"
        android:layout_marginTop="@dimen/login_fieldTopMargin"
        android:textSize="@dimen/createAccount_text"/>

    <EditText
        android:id="@+id/confirmPasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:hint="@string/createAccount_confirmPassword"
        android:layout_marginTop="@dimen/login_fieldTopMargin"
        android:textSize="@dimen/createAccount_text" />

    <EditText
        android:id="@+id/UsernameText"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/createAccount_username"
        android:layout_marginTop="@dimen/login_fieldTopMargin"
        android:textSize="@dimen/createAccount_text"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/majorSpinner"
            android:layout_marginTop="@dimen/login_fieldTopMargin"
            android:textSize="@dimen/createAccount_text"
            style="@style/CustomSpinner"/>

        <EditText
            android:id="@+id/invisibleMajorErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_toRightOf="@id/majorSpinner"
            android:layout_toEndOf="@id/majorSpinner"
            android:layout_alignBottom="@id/majorSpinner"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:text="@string/createAccount_level"
        android:textSize="@dimen/createAccount_text"/>
    <RadioGroup
        android:id="@+id/levelRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/undergradRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createAccount_ugrad"
            android:layout_marginTop="@dimen/login_linkTopMargin"
            android:layout_marginLeft="@dimen/login_fieldSideMargin"
            android:textSize="@dimen/createAccount_text"/>
        <RadioButton
            android:id="@+id/gradRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createAccount_grad"
            android:layout_marginTop="@dimen/login_linkTopMargin"
            android:layout_marginLeft="@dimen/login_fieldSideMargin"
            android:textSize="@dimen/createAccount_text"/>
        <RadioButton
            android:id="@+id/proffesorRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createAccount_proffessor"
            android:layout_marginTop="@dimen/login_linkTopMargin"
            android:layout_marginLeft="@dimen/login_fieldSideMargin"
            android:textSize="@dimen/createAccount_text"/>
    </RadioGroup>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_buttonHeight"
        android:text="@string/createAccount_confirm"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorAccent"
        android:textSize="@dimen/createAccount_text"/>

</LinearLayout>

</ScrollView>