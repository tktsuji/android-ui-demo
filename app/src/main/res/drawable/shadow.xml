<?xml version="1.0" encoding="utf-8"?>
<!-- Shadow behind editText fields in CreateAccount and EditProfile -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="#cdd5e2" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="2px" android:right="2px" android:left="2px" android:top="2px">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>